<?xml version="1.0" encoding="utf-8"?>
<bases:ShellBase
    x:Class="Atelier.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Atelier.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bases="using:Atelier.Views.Bases"
    mc:Ignorable="d"
    Loaded="OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar Title="Atelier"
                  VerticalAlignment="Top"
                  IsPaneToggleButtonVisible="True"
                  PaneToggleRequested="OnPaneToggleRequested">
            <TitleBar.IconSource>
                <BitmapIconSource ShowAsMonochrome="False"
                                  UriSource="/Assets/app.ico"/>
            </TitleBar.IconSource>
        </TitleBar>

        <NavigationView x:Name="NavigationView"
                        Grid.Row="1"
                        IsPaneToggleButtonVisible="False"
                        IsBackButtonVisible="Collapsed"
                        ItemInvoked="OnNavItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home"
                                    Icon="Home"
                                    Tag="DefaultHome"
                                    ToolTipService.ToolTip="Home" />

                <NavigationViewItemSeparator />

                <NavigationViewItem Content="Developer Tools"
                                    Tag="DeveloperToolsGroup"
                                    IsExpanded="True"
                                    ToolTipService.ToolTip="Developer Tools">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC7A;" />
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="API Tool"
                                            Tag="ApiTool"
                                            ToolTipService.ToolTip="API Too">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xF6FA;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Decrypt Log"
                                            Tag="DecryptLog"
                                            ToolTipService.ToolTip="Decrypt Log">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE8E5;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Server Checker"
                                            Tag="ServerChecker"
                                            ToolTipService.ToolTip="Server Checker">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE950;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem Content="QA Tools"
                                    Tag="QAToolsGroup"
                                    IsExpanded="True"
                                    ToolTipService.ToolTip="QA Tools">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE939;" />
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Clear Icon Cache"
                                            Tag="ClearIconCache"
                                            ToolTipService.ToolTip="Clear Icon Cache">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xEC4E;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Push Message"
                                            Tag="PushMessage"
                                            ToolTipService.ToolTip="Push Message">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE90A;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="RootFrame"
                   IsNavigationStackEnabled="False"
                   Padding="25"/>
        </NavigationView>
    </Grid>
</bases:ShellBase>
